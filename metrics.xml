<?xml version="1.0" encoding="UTF8"?>

<import name="metrics" xmlns="http://www.compatibleone.fr/schemes/cords.xsd">

<metric name="activity" period="60" samples="1" expression="top -b -n1 | grep users"/>
<metric name="cpu" period="60" samples="1" expression="top -b -n1 | grep Cpu"/>
<metric name="memory" period="60" samples="1" expression="top -b -n1 | grep Mem | grep total "/>
<metric name="tasks" period="60" samples="1" expression="top -b -n1 | grep Tasks"/>
<metric name="swap" period="60" samples="1" expression="top -b -n1 | grep Swap"/>

</import>



