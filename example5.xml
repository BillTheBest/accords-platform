<?xml version="1.0" encoding="UTF8"?>
<manifest name="mypaas_product" xmlns="http://www.compatibleone.fr/schemes/cords.xsd">
<description>This manifest describes an example of how a PAAS platform can formulate manifests to describe service products made available through the ACCORDS platform.</description>
<node name="platform" access="public" scope="common" type="mypaas"/>
<node name="one" access="public" scope="normal" type="simple" provider="mypaas"/>
<node name="two" access="public" scope="normal" type="simple" provider="mypaas"/>
<node name="three" access="public" scope="normal" type="simple" provider="mypaas"/>
<node name="four" access="public" scope="normal" type="simple" provider="mypaas"/>
<configuration>
<action name="example" type="cordscript" 
 expression="two.configure(one.hostname); three.configure(two.hostname); four.configure(three.hostname);"/>
</configuration>
<security name="public" level="public"/>
<account name="mypaasuser"/>
</manifest>

