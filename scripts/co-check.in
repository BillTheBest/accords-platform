#!/bin/bash
#---------------------------------------------
# Accords Platform Installation Validity Check
#---------------------------------------------

verbose=1
level=

function success()
{
	if [ -z "$verbose" ]; then
		verbose=0
	else
		echo "--" $1 ": OK" 
	fi
}

function failure()
{
	echo "------------------------------------------"
	echo "The category $1 is missing                "
	echo "The category server $2 is not running and "
	echo "needs to be restarted.                    "
	echo "------------------------------------------"
	if [ -z "$level" ]; then
		echo "Launching run-$2                          "
		echo "------------------------------------------"
		level=1
		sleep 1
		@bindir@/run-$2 &
		sleep 5
		echo "Rechecking $1 $2                          " 
		echo "------------------------------------------"
		sleep 2
		check $1 $2
		level=
	else
		echo "Validate to restart  the accords platform "
		echo "------------------------------------------"
		read p
		echo "------------------------------------------"
		echo "Shuting down the Accords Platform in 5 sec"
		echo "------------------------------------------"
		sleep 5
		co-stop
		echo "------------------------------------------"
		echo " Awaiting TIME-WAIT and CLOSE completion  "
		echo "------------------------------------------"
		sleep 30
		echo "Starting up the Accords Platform in 5 sec"
		echo "------------------------------------------"
		sleep 5
		co-start
		exit 0
	fi
}

function check()
{
v=`@bindir@/co-resolver $1`

if [ -z "$v" ]; then
	failure $1 $2 
else
	success $1 
fi

}

