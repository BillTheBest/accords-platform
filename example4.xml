<?xml version="1.0" encoding="UTF8"?>
<manifest name="mypaas" xmlns="http://www.compatibleone.fr/schemes/cords.xsd">
<description>This manifest describes an example of how a PAAS can offer its services through the ACCORDS platform.</description>
<node name="accords" access="public" scope="common" type="accords"/>
<node name="mypaas" access="public" scope="common"/>
<node name="paasprocci" access="public" scope="normal"/>
<configuration>
<action name="paasprocci" type="cordscript" 
 expression="paasprocci.configure(mypaas.hostname); paasprocci.configure(accords.publisher.hostname); paasprocci.configure(accords.coss.hostname);  paasprocci.configure(accords.comons.hostname);"/>
</configuration>
<security name="public" level="public"/>
<account name="public"/>
</manifest>

