<manifest name="accords:coes" xmlns="http://www.compatibleone.fr/schemes/manifest.xsd">
<node name="accords:publisher" access="public" scope="common" type="accords:publisher"/>
<node name="coes" access="public" scope="normal" type="simple" provider="openstack">
	<infrastructure name="accords:component"/>
	<image name="debian:coes">
		<system name="debian_with_cosacs"/>
		<package 
			name="debian:coes" 
			installation="wget http://www.compatibleone.fr/accords-platform/install-coes.sh"
			configuration="bash install-coes.sh">
			<port name="coes" protocol="tcp" from="8087" to="8087" range="0.0.0.0/0"/>
		</package>
	</image>
</node>
<configuration name="accords:coes">
	<action expression="coes.configure(accords:publisher.publisher.hostname);"/>
	<action expression="coes.fork('bash run-coes);"/>
</configuration>
<security name="accords:security"/>
<account name="accords:account"/>
</manifest>
