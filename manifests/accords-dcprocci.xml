<manifest name="accords:dcprocci" xmlns="http://www.compatibleone.fr/schemes/manifest.xsd">
<node name="accords:publisher" access="public" scope="common" type="accords:publisher"/>
<node name="dcprocci" access="public" scope="normal" type="simple" provider="openstack">
	<infrastructure name="accords:component"/>
	<image name="debian:dcprocci">
		<system name="debian_with_cosacs"/>
		<package 
			name="debian:dcprocci" 
			installation="wget http://www.compatibleone.fr/accords-platform/install-dcprocci.sh"
			configuration="bash install-dcprocci.sh">
			<port name="dcprocci" protocol="tcp" from="8087" to="8087" range="0.0.0.0/0"/>
		</package>
	</image>
</node>
<configuration name="accords:dcprocci">
	<action expression="dcprocci.configure(accords:publisher.publisher.hostname);"/>
	<action expression="dcprocci.fork('bash run-dcprocci');"/>
</configuration>
<security name="accords:security"/>
<account name="accords:account"/>
</manifest>

