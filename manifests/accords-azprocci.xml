<manifest name="accords:azprocci" xmlns="http://www.compatibleone.fr/schemes/manifest.xsd">
<node name="accords:publisher" access="public" scope="common" type="accords:publisher"/>
<node name="azprocci" access="public" scope="normal" type="simple" provider="openstack">
	<infrastructure name="accords:component"/>
	<image name="debian:azprocci">
		<system name="debian_with_cosacs"/>
		<package 
			name="debian:azprocci" 
			installation="wget http://www.compatibleone.fr/accords-platform/install-azprocci.sh"
			configuration="bash install-azprocci.sh">
			<port name="azprocci" protocol="tcp" from="8087" to="8087" range="0.0.0.0/0"/>
		</package>
	</image>
</node>
<configuration name="accords:azprocci">
	<action expression="azprocci.configure(accords:publisher.publisher.hostname);"/>
	<action expression="azprocci.fork('bash run-azprocci');"/>
</configuration>
<security name="accords:security"/>
<account name="accords:account"/>
</manifest>

