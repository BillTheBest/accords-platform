<?xml version="1.0" encoding="UTF8"?>
<manifest name="accords" xmlns="http://www.compatibleone.fr/schemes/cords.xsd">
<description>This manifest describes the CompatibleOne ACCORDS provisioning platform and the collection of service components of which it is composed.</description>
<node name="publisher" access="public" scope="common"/>
<node name="coss" access="public" scope="common"/>
<node name="ezvm" access="public" scope="common"/>
<node name="comons" access="public" scope="common"/>
<node name="conets" access="public" scope="normal"/> 
<node name="coes" access="public" scope="normal"/>
<node name="parser" access="public" scope="normal"/> 
<node name="broker" access="public" scope="normal"/>
<node name="procci" access="public" scope="normal"/>
<configuration name="accords">
<action name="coss" type="cordscript" expression="coss.configure(publisher.hostname);"/>
<action name="comons1" type="cordscript" expression="comons.configure(publisher.hostname);"/>
<action name="comons2" type="cordscript" expression="comons.configure(coss.hostname);"/>
<action name="coes" type="cordscript" 
 expression="coes.configure(publisher.hostname); coes.configure(coss.hostname); coes.configure(comons.hostname);"/>
<action name="conets" type="cordscript" 
 expression="conets.configure(publisher.hostname);conets.configure(coss.hostname);conets.configure(comons.hostname);"/>
<action name="parser" type="cordscript" 
 expression="parser.configure(publisher.hostname);parser.configure(coss.hostname);parser.configure(comons.hostname);"/>
<action name="broker" type="cordscript" 
 expression="broker.configure(publisher.hostname);broker.configure(coss.hostname);broker.configure(omons.hostname);"/>
<action name="procci" type="cordscript" 
 expression="procci.configure(publisher.hostname);procci.configure(coss.hostname);procci.configure(comons.hostname);"/>
</configuration>
<security name="public" level="public"/>
<account name="public"/>
</manifest>

